"First operand: " print
readln toint let n1

n1 ? if
    "Invalid integer input" println
    1 exit
end

"Second operand: " print
readln toint let n2

n2 ? if
    "Invalid integer input" println
    1 exit
end

"Operation: " print
readln let op

"Result: " print

op "+" = if
    n2 n1 + println
else op "-" = if
    n2 n1 - println
else op "*" = if
    n2 n1 * println
else op "/" = if
    n2 n1 / println
end end end end